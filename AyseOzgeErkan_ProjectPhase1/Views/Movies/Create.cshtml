@model BLL.DAL.Movie

@{
ViewData["Title"] = "Create Movie";
}

<h2>Create Movie</h2>

<form asp-action="Create" asp-controller="Movies" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Movie Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate" class="control-label">Release Date</label>
        <input asp-for="ReleaseDate" class="form-control" type="date" required />
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalRevenue" class="control-label">Total Revenue</label>
        <input asp-for="TotalRevenue" class="form-control" type="number" required />
        <span asp-validation-for="TotalRevenue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DirectorId">Director</label>
        <select asp-for="DirectorId" class="form-control" asp-items="ViewBag.Directors" required>
            <option value="">Select a Director</option> <!-- Default empty option -->
        </select>
        <span asp-validation-for="DirectorId" class="text-danger"></span>
    </div>
</form>

<hr>
<div class="d-flex justify-content-center gap-2">
    <a asp-action="Create" class="btn btn-primary">Create</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>




