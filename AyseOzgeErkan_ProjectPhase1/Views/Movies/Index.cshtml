@model IEnumerable<BLL.DAL.Movie>

<h1 class="text-center mb-4">Movies</h1>

<div class="mb-3">
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
</div>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Release Date</th>
        <th>Total Revenue</th>
        <th>Director</th>
        <th class="text-center">Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
    foreach (var movie in Model)
    {
    <tr>
        <td>@movie.Name</td>
        <td>@movie.ReleaseDate?.ToString("dd/MM/yyyy")</td>
        <td>@movie.TotalRevenue.ToString("C")</td>
        <td>@movie.Director?.Name</td>
        <td class="text-center">
            <a href="@Url.Action("Edit", new { id = movie.Id })" class="btn btn-primary btn-sm mx-1">Edit</a>
            <a href="@Url.Action("Delete", new { id = movie.Id })" class="btn btn-danger btn-sm mx-1">Delete</a>
        </td>
    </tr>
    }
    }
    else
    {
    <tr>
        <td colspan="5" class="text-center">No movies available.</td>
    </tr>
    }
    </tbody>
</table>
